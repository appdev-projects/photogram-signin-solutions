<h1><%= @user.username %></h1>

<h2>Followers (<%= @user.followers.count %>)</h2>

<dl>
  <dt>Followers</dt>
  <dd><%= @user.followers.count %></dd>

  <dt>Following</dt>
  <dd><%= @user.following.count %></dd>

  <dt>Send follow request</dt>
  <dd>
    <form action="/create_follow_request_record">
      <input type="hidden" name="sender_id" value="<%= @user.id %>">

      <label for="user_dropdown">Recipient</label>
      <select id="user_dropdown" name="recipient_id">
        <% User.where.not({ :id => @user.id }).where.not({ :id => @user.sent_follow_requests.pluck(:recipient_id) }).order({ :username => :asc }).each do |a_user| %>
          <option value="<%= a_user.id %>">
            <%= a_user.username %>
          </option>
        <% end %>
      </select>

      <button>Follow</button>
    </form>
  </dd>
</dl>

<nav>
  <ul>
    <li><a href="/users/<%= @user.id %>">Own photos</a></li>
    <li><a href="/users/<%= @user.id %>/liked">Liked photos</a></li>
    <li><a href="/users/<%= @user.id %>/feed">Feed</a></li>
    <li><a href="/users/<%= @user.id %>/discover">Discover</a></li>
    <li><a href="/users/<%= @user.id %>/followers">Followers</a></li>
    <li><a href="/users/<%= @user.id %>/following">Following</a></li>
  </ul>
</nav>

<h2>Own photos (<%= @user.own_photos.count %>)</h2>

<table>
  <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th>Likes</th>
    <th></th>
  </tr>

  <% @user.own_photos.order({ :created_at => :desc }).each do |pic| %>
  <tr>
    <td>
      <img src="<%= pic.image %>">
    </td>

    <td>
      <%= pic.caption %>
    </td>

    <td>
      <%= pic.owner.username %>
    </td>

    <td>
      <%= time_ago_in_words(pic.created_at) %> ago
    </td>

    <td>
      <%= pluralize(pic.likes_count, "like") %>
    </td>

    <td>
      <a href="/photos/<%= pic.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
